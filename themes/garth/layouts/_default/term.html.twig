{% extends '_default/list.html.twig' %}

{% block content %}
        <section>
          <header class="typeset">
            <h1>{{ page.title }}</h1>
            {{ page.content }}
          </header>
          <ul class="list list--pages">
            {%- for p in pages ~%}
            <li class="item item--page">
              <article class="article typeset">
                <h2><a href="{{ url(p) }}">{{ p.title }}</a></h2>
                {%~ include 'partials/post-meta.html.twig' with {'post': p} only ~%}
                {{ p.content|excerpt_html }}
              </article>
            </li>
            {%- endfor ~%}
          </ul>
          {%- include 'partials/pagination.html.twig' ~%}
        </section>
{% endblock content %}
