{% set pages = site.pages.showable %}
{% if page.pages is defined %}
{% set pages = page.pages %}
{% endif %}
{% if page.pagination.pages is defined %}
{% set pages = page.pagination.pages %}
{% endif %}

{% extends 'page.html.twig' %}

{% block content %}
        <section>
          <header class="typeset">
            <h1>{{ page.title }}</h1>
            {{- page.content ~}}
          </header>
          <ul class="list list--pages">
            {%- for p in pages ~%}
            <li class="item item--page">
              <article class="page typeset">
                <h2><a href="{{ url(p) }}">{{ p.title }}</a></h2>
                {{ p.content|excerpt_html }}
              </article>
            </li>
            {%- endfor ~%}
          </ul>
          {%~ include 'partials/pagination.html.twig' ~%}
        </section>
{% endblock content %}
